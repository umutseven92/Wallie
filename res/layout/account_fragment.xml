<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:weightSum="1" android:background="@drawable/main_layout">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" android:id="@+id/relativeLayout8">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" android:layout_marginTop="10dp" android:id="@+id/relativeLayout9">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Name + LastName"
                    android:id="@+id/txtName"
                    android:textColor="#ff000000"
                    android:layout_centerHorizontal="true" android:layout_marginTop="10dp" android:textSize="35sp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:background="@drawable/rounded_layout"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="80dp">

            <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="390dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Para Birimi: "
                            android:id="@+id/textView19"
                            android:textColor="#ff000000"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" android:layout_marginTop="30dp"
                            android:layout_marginLeft="20dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="CUR"
                            android:id="@+id/txtAccountCurrency"
                            android:textColor="#ff000000"
                            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" android:layout_marginTop="30dp"
                            android:layout_marginRight="20dp"/>
                    <View
                            android:layout_width="700dp"
                            android:layout_height="1dp"
                            android:background="@color/outline"
                            android:layout_below="@+id/textView19" android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" android:id="@+id/textView21"
                            android:layout_marginTop="12dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Birikim Bildirimi: "
                            android:id="@+id/textView20"
                            android:textColor="#ff000000"
                            android:layout_alignBottom="@+id/swcAccountSaving"
                            android:layout_alignLeft="@+id/textView19"
                            android:layout_alignStart="@+id/textView19"/>
                    <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/swcAccountSaving"
                            android:textOn="Açık" android:textOff="Kapalı"
                            android:enabled="true"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/textView21" android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" android:layout_marginRight="20dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Birikim Bildirim Saati:"
                            android:id="@+id/textView22" android:layout_below="@+id/swcAccountSaving"
                            android:layout_alignLeft="@+id/textView20" android:layout_alignStart="@+id/textView20"
                            android:layout_marginTop="30dp" android:textColor="#ff000000"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Hatirlatma Bildirim Saati:"
                            android:id="@+id/textView23"
                            android:textColor="#ff000000"
                            android:layout_alignTop="@+id/btnAccountRem" android:layout_alignLeft="@+id/textView24"
                            android:layout_alignStart="@+id/textView24" android:layout_marginTop="16dp"/>
                    <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:text="12"
                            android:id="@+id/btnAccountSav"
                            android:layout_alignRight="@+id/swcAccountSaving"
                            android:layout_alignEnd="@+id/swcAccountSaving" android:layout_marginTop="130dp"
                            android:layout_marginRight="20dp"/>
                    <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:text="12"
                            android:id="@+id/btnAccountRem"
                            android:layout_marginTop="15dp" android:layout_below="@+id/textView24"
                            android:layout_alignLeft="@+id/btnAccountSav"
                            android:layout_alignStart="@+id/btnAccountSav"/>

                    <View
                            android:layout_width="700dp"
                            android:layout_height="1dp"
                            android:background="@color/outline"
                            android:layout_below="@+id/textView22" android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" android:layout_marginTop="20dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Hatirlatma Bildirimi:"
                            android:id="@+id/textView24" android:layout_below="@+id/btnAccountSav"
                            android:layout_alignLeft="@+id/textView22" android:layout_alignStart="@+id/textView22"
                            android:layout_marginTop="35dp" android:textColor="#ff000000"/>
                    <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/swcAccountRem" android:layout_alignBottom="@+id/textView24"
                            android:layout_alignRight="@+id/swcAccountSaving"
                            android:layout_alignEnd="@+id/swcAccountSaving"
                            android:textOff="Kapalı" android:textOn="Açık"/>

                    <View
                            android:layout_width="700dp"
                            android:layout_height="1dp"
                            android:background="@color/outline"
                            android:layout_below="@+id/btnAccountRem" android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" android:layout_marginTop="10dp"
                            android:id="@+id/view"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#ff000000" android:text="Durum Bildirimi:"
                            android:layout_below="@+id/view" android:layout_alignLeft="@+id/textView23"
                            android:layout_alignStart="@+id/textView23" android:layout_marginTop="30dp"
                            android:id="@+id/textView25"/>

                        <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/swcStatusNot"
                                android:textOn="Açık" android:textOff="Kapalı"
                                android:enabled="true"
                                android:layout_alignBottom="@+id/textView25"
                                android:layout_alignLeft="@+id/swcAccountRem"
                                android:layout_alignStart="@+id/swcAccountRem"/>

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
    </RelativeLayout>
</RelativeLayout>
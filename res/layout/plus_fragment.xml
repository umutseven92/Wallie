<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/main_layout">

    <ImageView
            android:layout_width="250dp"
            android:layout_height="260dp"
            android:id="@+id/imageView3" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:scaleType="fitXY"
            android:src="@drawable/cuzdan_hero2" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/plus_ads"
            android:id="@+id/textView46"
            android:textColor="#ff000000"
            android:layout_above="@+id/textView47" android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/plus_exclusive"
            android:id="@+id/textView47"
            android:textColor="#ff000000"
            android:gravity="center"
            android:layout_above="@+id/btnPro" android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>


        <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/plus_buy"
                android:id="@+id/btnPro"
                android:background="@drawable/rounded_button" android:textColor="#ffffffff"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/textView46" android:layout_alignStart="@+id/textView46"
                android:layout_alignRight="@+id/textView46" android:layout_alignEnd="@+id/textView46"
                android:textSize="24dp" android:layout_marginBottom="20dp"/>
</RelativeLayout>
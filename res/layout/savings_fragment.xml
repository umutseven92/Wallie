<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/main_layout">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="420dp"
            android:id="@+id/lytSavingsList" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:background="@drawable/rounded_layout">
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lstSavings" android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView5"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" android:choiceMode="singleChoice" android:divider="@color/outline"
                android:dividerHeight="1dp" android:listSelector="@drawable/list_selector"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="422dp" android:layout_marginTop="30dp" android:id="@+id/lytEmptySavings" android:visibility="invisible"
            android:background="@drawable/main_layout">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Birikiminiz yok. "
                android:id="@+id/textView4"
                android:layout_marginTop="55dp"
                android:textColor="#ff000000" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Para biriktirmeye başlamak için &quot;Birikime Başla&quot; tuşuna basın."
                android:id="@+id/textView5" android:layout_below="@+id/textView4" android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp" android:textColor="#ff000000" android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="85dp" android:layout_below="@+id/lytSavingsList"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/lytSavingButton">
        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Birikime Başla"
                android:id="@+id/btnAddSaving" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_button"/>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="50dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"  >

        <TextView android:id="@android:id/text1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceListItem" android:layout_centerVertical="true"
                  android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                  android:layout_marginLeft="10dp" android:layout_toLeftOf="@android:id/text2"
                  android:layout_toStartOf="@android:id/text2"/>

        <TextView android:id="@android:id/text2"
                  android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceListItemSmall"
                  android:layout_centerVertical="true" android:layout_alignParentRight="true" android:gravity="right"
                  android:layout_alignParentEnd="true" android:layout_marginRight="5dp"/>
    </RelativeLayout>
</TwoLineListItem>